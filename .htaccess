RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 120 days"
    ExpiresByType text/css "access plus 120 days"
    ExpiresByType application/javascript "access plus 120 days"
    ExpiresByType image/webp "access plus 120 days"
    ExpiresByType image/png "access plus 120 days"
    ExpiresByType font/woff "access plus 120 days"
    ExpiresByType font/woff2 "access plus 120 days"
</IfModule>
<IfModule mod_headers.c>
    <FilesMatch "\.(html|css|js|webp|jpg|jpeg|png|gif|woff|woff2)$">
        Header set Cache-Control "public, max-age=10368000, immutable"
    </FilesMatch>
</IfModule>
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript image/svg+xml
</IfModule>